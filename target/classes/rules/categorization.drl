package rules

import com.jp001.model.ApplicationFile;

rule "Categorize as Games"
when
    $app : ApplicationFile(name matches "(?i).*game.*" || name matches "(?i).*steam.*" || path matches "(?i).*epic.*")
then
    $app.setCategory("Games");
end

rule "Categorize as Developer Tools"
when
    $app : ApplicationFile(name matches "(?i).*intellij.*" || name matches "(?i).*eclipse.*" || name matches "(?i).*vscode.*")
then
    $app.setCategory("Developer Tools");
end

rule "Categorize as Productivity"
when
    $app : ApplicationFile(name matches "(?i).*office.*" || name matches "(?i).*word.*" || name matches "(?i).*excel.*")
then
    $app.setCategory("Productivity");
end